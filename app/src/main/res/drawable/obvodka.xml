<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#9C1816">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
        </shape>
    </item>

    <item
        android:right="0dp"
        android:left="0dp"
        android:top="0dp"
        android:bottom="0dp">
        <shape>
            <stroke
                android:width="0.5dp"
                android:color="@color/black" />
        </shape>
    </item>
</ripple>

